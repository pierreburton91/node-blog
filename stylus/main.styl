.dash-table
	width 100%
	table-layout fixed
	border-collapse collapse
	& thead
		text-align left
		color $dark
		text-transform uppercase
		font-weight 700
		letter-spacing 1px
		& tr
			background-color $white
			border-bottom 2px solid rgba(0,0,0,0.04)
			& *:nth-child(2)
				width 25%
	& tr td:first-child
		width 45px
	& tbody
		& tr:nth-child(odd)
			background-color #fafafa
		& tr:nth-child(even)
			background-color $white
		& tr:hover
			background-color $light-dark
	& td, th
		padding 12px
		text-overflow ellipsis
		text-align left
		overflow hidden
	& tfoot
		color $white
		text-align right
		& tr
			background-color $dash-accent
			& td
				padding 6px 12px
				font-size 12px


/*======================================= 
#										#
#			  EDITOR STYLES				#
#										#
#=======================================*/

.editor-header
	float left
	width 100%
	border-bottom 1px solid rgba(0,0,0,0.1)
	margin-bottom 16px
	& h1
		position relative
		color $dark
		font-weight 400
		letter-spacing 1px
		font-size 1.6em
		line-height 40px
		margin 0
		float left
	& .button
		box-shadow none
		background-color transparent
		margin-top 0
		color $dash-accent
		&.submit
			font-weight 700
			color $dash-accent
			margin-right 0
			&:hover
				color $dash-accent-darker
		&.cancel
			color $dark
			font-weight 300
			&:hover
				color $dash-accent

.tags
	background-color $dash-accent
	padding 4px 12px
	margin-right 8px
	border-radius 6px
	color $white
	font-size 0.9em
	cursor pointer
	&:hover
		background-color $dash-accent-lighter
.editor-toolbar
	padding 0
	border none
	border-radius 0
	& a
		border none
		color $dark !important
		&:hover
			border none
			background-color $light-dark
		&.active
			color $dash-accent !important
.CodeMirror
	padding 12px 0
	border none
	z-index inherit
	&.CodeMirror-fullscreen
		z-index 10
.editor-preview
	padding 12px 0
.editor-statusbar
	display none
.heading-separator
	border-top 1px solid rgba(0,0,0,0.1)
.upload
	display none
	& .upload-overlay
		position absolute
		display block
		top 0
		left 0
		right 0
		bottom 0
		background-color rgba(0,0,0,0.3)
		z-index 20
	& .upload-modal
		position fixed
		width 600px
		top 25%
		left calc(50vw - 300px)
		background-color $white
		box-shadow 0 5px 20px rgba(0,0,0,0.3)
		text-align center
		padding 32px
		border-radius 4px
		z-index 21
		& .dragndrop
			display block
			float left
			width 100%
			border 2px dashed rgba(0,0,0,0.1)
			border-radius 8px
			cursor pointer
			background-color #fafafa
			& input
				display none
			& i
				font-size 5em
				width 100%
				color $medium-dark
				margin 2rem 0 0 0
			& p
				font-weight 700
				font-size 2em
				line-height 1.8rem
				margin 2rem 0 2rem 0
				color $dark
				& span
					font-size 1.2rem
					font-weight 400
			&:hover
				opacity 0.8
				& i
					transform scale(1.05)
					color $dash-accent
				& p
					transform scale(0.95)
			&.dragover
				opacity 0.8
				& i
					transform scale(1.05)
					color $dash-accent
				& p
					transform scale(0.95)
		& p
			float left
			width 100%
			font-size 1em
			color $dark
			font-size 1.5em
			margin 1rem 0 0 0
	& .upload-preview
		display none
		& .image-preview
			display block
			float left
			width 100%
			height 250px
			margin-bottom 1em
			overflow hidden
			& img
				max-height 100%
				max-width 100%
			& span
				color #999
				font-size 1.2em
				margin-top 4rem
				display none
		& a
			float left
			width 100%
			margin-bottom 12px
.input-picture
	text-align center
	& img
		border-radius 50%
		background-color $light-dark
		width 140px
		height 140px
		margin-top 24px
		cursor pointer
		&:hover
			filter blur(4px)
.editor-categories
	width 100%
	float left
	& .category-item
		padding 4px 16px
		float left
		position relative
		cursor default
		background-color #fafafa
		margin-right 24px
		margin-bottom 16px
		border-left 4px solid #999999
		& span
			display inline-block
			position absolute
			right -8px
			top -8px
			background-color $dash-accent
			height 24px
			width 24px
			color $white
			border-radius 50%
			line-height 24px
			text-align center
			opacity 0
			font-size 0.8rem
			cursor pointer
			box-shadow 0 1px 4px rgba(0,0,0,0.3)
		&:hover
			background-color $light-dark
			border-color $dash-accent
			& span
				opacity 1