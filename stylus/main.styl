.dash-table
	width 100%
	table-layout fixed
	border-collapse collapse
	& thead
		text-align left
		color $dark
		text-transform uppercase
		font-weight 700
		letter-spacing 1px
		& tr
			background-color $white
			border-bottom 2px solid rgba(0,0,0,0.04)
			& *:nth-child(2)
				width 25%
	& tr td:first-child
		width 45px
		& label
			width 20px
			height 20px
			display block
			background-color $white
			border 1px solid rgba(0,0,0,0.2)
			border-radius 50px
			padding 0 2px
			line-height 18px
			cursor pointer
			& input
				display none
			& input + .fa
				display none
			& input:checked + .fa
				display inline-block
	& tbody
		& tr:nth-child(odd)
			background-color #fafafa
		& tr:nth-child(even)
			background-color $white
		& tr:hover
			background-color $light-dark
	& td, th
		padding 12px
		text-overflow ellipsis
		overflow hidden
	& tfoot
		color $white
		text-align right
		& tr
			background-color $dash-accent
			& td
				padding 6px 12px
				font-size 12px


/*======================================= 
#										#
#			  EDITOR STYLES				#
#										#
#=======================================*/

.container
	width 100%
	max-width 1024px
	margin 0 auto
	background-color $white
	padding 12px
	overflow hidden
.button
	background-color $dash-accent
	padding 0 12px
	color $white
	box-shadow 0 2px 5px rgba(0,0,0,0.2)
	float left
	position relative
	background-image none
	border none
	outline none
	cursor pointer
	font-family $body
	font-size 16px
	margin-right 16px
	min-width 124px
	height 40px
	line-height 40px
	text-align center
	text-decoration none
	border-radius 2px
	margin-top 16px
	&:hover
		background-color $dash-accent-darker
	&.borderless
		color $dash-accent
		background-color $white
		&:hover
			background-color $light-dark
.header
	float left
	width 100%
	border-bottom 1px solid rgba(0,0,0,0.1)
	margin-bottom 16px
	& h1
		position relative
		color $dark
		font-weight 400
		letter-spacing 1px
		font-size 1.2em
		line-height 40px
		margin 0
		float left
	& .editor-actions
		float right
		& .button
			box-shadow none
			background-color transparent
			margin-top 0
			&.submit
				font-weight 700
				color $dash-accent
				margin-right 0
				&:hover
					color $dash-accent-darker
			&.cancel
				color $dark
				font-weight 300
				&:hover
					color $dash-accent
	// &::after
	// 	content ''
	// 	display block
	// 	position absolute
	// 	left 0
	// 	bottom 0
	// 	height 1px
	// 	width 100%
	// 	background-color $light-dark
.labeled
	float left
	width 100%
	margin-bottom 12px
	position relative
	font-size 16px
	& .fixed-label
		position absolute
		pointer-events none
		left 0
		top 0
		color $dash-accent
		transform-origin left top 0px
		transform translateY(0) scale(0.78)
	& .float-label
		position absolute
		pointer-events none
		left 0
		top 0
		transform-origin left top 0px
		background-color $white
		width 100%
		text-align left
	& .bottom-line
		display block
		position absolute
		width 100%
		height 2px
		background-color $light-dark
		bottom 14px
		left 0
	& .bottom-line-active
		display block
		position absolute
		width 100%
		height 2px
		background-color $dash-accent
		bottom 14px
		left 0
		transform-origin center
		transform scaleX(0)
	& .inputs
		min-height 72px
		width 100%
		padding 0
		border none
		font-size inherit
		font-family inherit
		background-color transparent
		background-image none
		color $dark
		&.heading
			font-size 2.5em
			font-weight 700
		& + .float-label
			color #999999
			transform translateY(23px) scale(1)
		&:focus
			& + .float-label
				color $dash-accent
				transform translateY(0) scale(0.78)
				& + .bottom-line + .bottom-line-active
					transform scaleX(1)
			& + .fixed-label
				& + .bottom-line + .bottom-line-active
					transform scaleX(1)
		&:valid
			& + .float-label
				color $dash-accent
				transform translateY(0) scale(0.78)
	& .hint
		position absolute
		font-size 12px
		left 0
		bottom -8px
.editor-toolbar
	padding 0
	border none
	border-radius 0
	& a
		border none
		color $dark !important
		&:hover
			border none
			background-color $light-dark
.CodeMirror
	padding 12px 0
	border none
	z-index inherit
.editor-preview
	padding 12px 0
.editor-statusbar
	display none
h3
	float left
	width 100%
	color $dark
	letter-spacing 1px
	font-weight 400
	padding-top 32px
	border-top 1px solid rgba(0,0,0,0.1)
.upload
	display block
	& .upload-overlay
		position absolute
		display block
		top 0
		left 0
		right 0
		bottom 0
		background-color rgba(0,0,0,0.3)
	& .upload-modal
		position fixed
		width 600px
		top 25%
		left calc(50vw - 300px)
		background-color $white
		box-shadow 0 5px 20px rgba(0,0,0,0.3)
		text-align center
		padding 32px
		border-radius 4px
		& .dragndrop
			display block
			float left
			width 100%
			border 2px dashed rgba(0,0,0,0.1)
			border-radius 8px
			cursor pointer
			background-color #fafafa
			& input
				display none
			& i
				font-size 5em
				width 100%
				color #999999
				margin 2rem 0 0 0
			& p
				font-weight 700
				font-size 2em
				line-height 1.8rem
				margin 2rem 0 2rem 0
				color $dark
				& span
					font-size 1.2rem
					font-weight 400
			&:hover
				opacity 0.8
				& i
					transform scale(1.05)
					color $dash-accent
				& p
					transform scale(0.95)
			&.dragover
				opacity 0.8
				& i
					transform scale(1.05)
					color $dash-accent
				& p
					transform scale(0.95)
		& p
			float left
			width 100%
			font-size 1em
			color $dark
			font-size 1.5em
			margin 1rem 0 0 0